{#
 * Template for error message users receive when they do not have a TOTP
 *  value when MFA is enforced.
#}

{% set pagetitle = 'TOTP'|trans %}
{% extends '@core/base.twig' %}

{% block preload %}
<link rel="stylesheet" type="text/css" href="/{{ baseurlpath }}/module.php/simpletotp/style.css" />
{% endblock %}

{% block content %}

<h1>{% trans %}Multi-Factor Authentication Required{% endtrans %}</h1>
<p>{% trans %}It seems you do not have multi-factor authentication configured. This system has been configured such that it is mandatory to use multi-factor authentication.{% endtrans %}</p>
<p>{% trans %}If you are unsure what this means, or have your lost your multi-factor authentication device, you will need to contact your IT helpdesk for assistance.{% endtrans %}</p>
{% if restartUrl is defined and restartReturnTo is defined %}
<form method="post" action="{{ restartUrl }}">
    <input type="hidden" name="ReturnTo" value="{{ restartReturnTo }}" />
    <button class="simpletotp-restart" type="submit">{% trans %}Not you? Start over{% endtrans %}</button>
</form>
{% endif %}

{% endblock %}
